{
  "name": "cinema-home",
  "version": "1.0.4",
  "main": "index.mjs",
  "scripts": {
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "builderpublish": "electron-builder --publish=always",
    "publish": "electron-forge publish",
    "tailwind": "npx tailwindcss -i ./web-ui/input.css -o ./web-ui/output.css --watch"
  },
  "build": {
    "appId": "com.qujeee.cinema-home",
    "productName": "Cinema Home",
    "mac": {
      "target": [
        "dmg"
      ],
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": [
        "flatpak"
      ],
      "publish": [
        "github"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "qujeee",
      "repo": "cinema-home",
      "releaseType": "release"
    }
  },
  "author": "qujeee <qujeee@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/qujeee/cinema-home.git"
  },
  "description": "Cinema Home brings the cinema experience to your home",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron-forge/publisher-github": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "daisyui": "^4.11.1",
    "electron": "^30.0.8",
    "electron-builder": "^24.13.3",
    "tailwindcss": "^3.4.3"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^9.0.0",
    "express": "^4.19.2",
    "js-yaml": "^4.1.0",
    "loudness": "^0.4.2",
    "node-schedule": "^2.1.1",
    "video.js": "^8.12.0",
    "ytdl-core": "^4.11.5"
  }
}
